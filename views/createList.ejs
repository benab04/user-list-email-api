<!DOCTYPE html>
<html>
  <head>
    <title>Create List</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class="container">
      <h1>Create a New List</h1>
      <form action="/lists" method="POST">
        <div class="form-group">
          <label for="title">List Title</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            required
          />
        </div>
        <h3>Custom Properties</h3>
        <div id="customProperties">
          <div class="form-group" id="propertyGroup0">
            <label for="propertyTitle0">Property Title</label>
            <input
              type="text"
              class="form-control"
              id="propertyTitle0"
              name="customProperties[0][title]"
              required
            />
            <label for="fallbackValue0">Fallback Value</label>
            <input
              type="text"
              class="form-control"
              id="fallbackValue0"
              name="customProperties[0][fallback]"
              required
            />
            <button
              type="button"
              class="btn btn-danger mt-2"
              onclick="removeCustomProperty(0)"
            >
              Remove
            </button>
          </div>
        </div>
        <button
          type="button"
          class="btn btn-secondary"
          onclick="addCustomProperty()"
        >
          Add Another Property
        </button>
        <button type="submit" class="btn btn-primary">Create List</button>
      </form>
    </div>
    <script>
      let propertyCount = 1;

      function addCustomProperty() {
        const div = document.createElement("div");
        div.className = "form-group";
        div.id = `propertyGroup${propertyCount}`;
        div.innerHTML = `
        <label for="propertyTitle${propertyCount}">Property Title</label>
        <input type="text" class="form-control" id="propertyTitle${propertyCount}" name="customProperties[${propertyCount}][title]" required>
        <label for="fallbackValue${propertyCount}">Fallback Value</label>
        <input type="text" class="form-control" id="fallbackValue${propertyCount}" name="customProperties[${propertyCount}][fallback]" required>
        <button type="button" class="btn btn-danger mt-2" onclick="removeCustomProperty(${propertyCount})">
          Remove
        </button>
      `;
        document.getElementById("customProperties").appendChild(div);
        propertyCount++;
      }

      function removeCustomProperty(index) {
        const propertyGroup = document.getElementById(`propertyGroup${index}`);
        propertyGroup.parentNode.removeChild(propertyGroup);
      }
    </script>
  </body>
</html>
