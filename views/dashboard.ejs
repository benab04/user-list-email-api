<!DOCTYPE html>
<html>
  <head>
    <title>Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      .card-body {
        padding: 1.5rem;
      }
      .card-title {
        font-size: 1.25rem;
        margin-bottom: 1rem;
      }
      .card-buttons {
        margin-top: 1rem;
      }
      .btn-primary,
      .btn-danger {
        margin-right: 0.5rem;
      }
      .btn-success {
        margin-left: 1rem;
      }
      .container {
        padding-top: 70px !important;
      }
      @media (max-width: 576px) {
        .card-title {
          font-size: 1rem;
        }
        .btn {
          font-size: 0.875rem;
        }
        .btn-success {
          margin-left: 0;
        }
      }
    </style>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class="container mt-0 mb-5">
      <div class="d-flex justify-content-between align-items-center">
        <h1 class="my-4">Dashboard</h1>
        <a href="/lists/new" class="btn btn-success">Create New List</a>
      </div>

      <div class="row">
        <% lists?.forEach((list) => { %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title"><%= list.title %></h5>
                <div>
                  <form
                    action="/lists/<%= list._id %>/edit"
                    method="GET"
                    style="display: inline"
                  >
                    <button type="submit" class="btn btn-secondary btn-sm">
                      Edit
                    </button>
                  </form>
                  <form
                    action="/lists/<%= list._id %>?_method=DELETE"
                    method="POST"
                    style="display: inline"
                    onsubmit="return confirm('Are you sure you want to delete this list?');"
                  >
                    <button type="submit" class="btn btn-danger btn-sm">
                      Delete
                    </button>
                  </form>
                </div>
              </div>
              <div class="card-buttons d-flex justify-content-between">
                <a
                  href="/lists/<%= list._id %>"
                  class="btn btn-secondary btn-sm"
                  >Manage Users</a
                >
                <a
                  href="/lists/<%= list._id %>/users"
                  class="btn btn-secondary btn-sm"
                  >Existing Users</a
                >
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
