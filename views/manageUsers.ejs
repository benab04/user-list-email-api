<!DOCTYPE html>
<html>
  <head>
    <title>Manage Users in <%= list.title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      .form-group {
        margin-bottom: 1.5rem;
      }
      h1,
      h2 {
        margin-bottom: 1rem;
      }
      .container {
        padding-top: 70px !important;
      }
      .btn-primary {
        margin-top: 1rem;
      }
      .csv-upload-group,
      .add-user-group {
        border: 1px solid #dee2e6;
        padding: 1rem;
        border-radius: 0.25rem;
      }
      .btn-secondary {
        margin-top: 1.5rem;
      }
      @media (max-width: 576px) {
        h1,
        h2 {
          font-size: 1.5rem;
        }
        .form-group label {
          font-size: 1.1rem;
        }
        .form-group input {
          font-size: 1.1rem;
        }
        .btn-primary,
        .btn-secondary {
          font-size: 1.1rem;
          padding: 0.75rem 1.25rem;
        }
      }
      @media (min-width: 577px) and (max-width: 768px) {
        h1,
        h2 {
          font-size: 1.75rem;
        }
        .form-group label {
          font-size: 1.15rem;
        }
        .form-group input {
          font-size: 1.15rem;
        }
        .btn-primary,
        .btn-secondary {
          font-size: 1.15rem;
          padding: 0.75rem 1.25rem;
        }
      }
    </style>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class="container mb-5">
      <div class="d-flex justify-content-between align-items-center">
        <h1>List: <%= list.title %></h1>
        <div class="text-center">
          <button
            class="btn btn-secondary my-0"
            onclick="location.href='/lists/<%= list._id %>/users'"
          >
            Show Existing Users
          </button>
        </div>
      </div>

      <hr />

      <div class="row">
        <div class="col-md-6 add-user-group">
          <h2>Add User</h2>
          <form action="/lists/<%= list._id %>/users" method="POST">
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                required
              />
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
              />
            </div>
            <% list.customProperties.forEach((property, index) => { %>
            <div class="form-group">
              <label for="customProperty<%= index %>"
                ><%= property.title %></label
              >
              <input
                type="text"
                class="form-control"
                id="customProperty<%= index %>"
                name="customProperties[<%= property.title %>]"
                placeholder="<%= property.fallback %>"
              />
            </div>
            <% }); %>
            <button type="submit" class="btn btn-primary">Add User</button>
          </form>
        </div>
        <div class="col-md-6">
          <div class="csv-upload-group">
            <h2>Upload users via CSV</h2>
            <p>The CSV file should have a 'name' and 'email' column</p>
            <form
              action="/lists/<%= list._id %>/users/upload"
              method="POST"
              enctype="multipart/form-data"
            >
              <div class="form-group">
                <label for="csvFile"></label>
                <input
                  type="file"
                  class="form-control-file"
                  id="csvFile"
                  name="csvFile"
                  accept=".csv"
                  required
                />
              </div>
              <button type="submit" class="btn btn-primary">Upload CSV</button>
            </form>
          </div>
          <div class="csv-upload-group mt-4">
            <h2>Change Fallback Values</h2>
            <form action="/lists/<%= list._id %>/fallbacks" method="POST">
              <% list.customProperties.forEach((property, index) => { %>
              <div class="form-group">
                <label for="fallback<%= index %>"
                  ><%= property.title %> Fallback</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="fallback<%= index %>"
                  name="fallbacks[<%= property.title %>]"
                  placeholder="<%= property.fallback %>"
                  value="<%= property.fallback %>"
                />
              </div>
              <% }); %>
              <button type="submit" class="btn btn-primary">
                Update Fallbacks
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
